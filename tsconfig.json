{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": false,
    "paths": {}
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "examples"],
  "compileOnSave": false
}
